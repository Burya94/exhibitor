#!/bin/sh
#managed by puppet

NAME=exhibitor
PID_FILE=/var/run/$NAME.pid

EXHIBITOR_HOME="<%= @install_dir %>"

EXHIBITOR_OPTS="<%- @defaultfile_opts.sort.each do |k,v|
  if v.length != 0 -%>
 --<%= k %> <%= "\\\"#{v}\\\"" -%>
<%-
  end
end -%>"

/bin/java -jar ${EXHIBITOR_HOME}/exhibitor-<%= scope.lookupvar('::exhibitor::version') %>.jar ${EXHIBITOR_OPTS} &
